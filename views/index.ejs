<!DOCTYPE html>
<html>
<head>
    <title>chat example</title>
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/bootstrap-theme.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/stylesheets/style.css">
    <script type="text/javascript" src="/js/app.js"></script>
</head>
<body>

<!-- Fixed navbar -->
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">chat example</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><div id="ws-status" style="color: #fff;padding-top: 16px;">Подключаюсь...</div></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="#logout">Выйти</a></li>
                </ul>
            </ul>
        </div>
    </div>
</div>

<script type="text/javascript">
    var ChApp = new chatApp({
        debug: true,
        onConnect: function() {
            document.getElementById('ws-status').innerHTML = '<span class="online">Онлайн<span>';
        },
        onClose: function() {
            document.getElementById('ws-status').innerHTML = 'Подключаюсь...';
        }
    });
</script>

<div class="container theme-showcase" style="padding-top: 60px;">

    <div style="width: 300px; margin: auto auto;border: 1px solid #ccc; border-radius: 3px;padding: 30px;">
        <div class="form-group">
            <input type="text" class="form-control" id="nick-input" placeholder="Enter Nick">
        </div>
        <button onclick="ChApp.sendNick(document.getElementById('nick-input').value);" type="button" class="btn btn-default">Ok</button>
    </div>

    <div style="clear: both;"></div>
    <div class="col-xs-12 col-sm-6 col-md-8">
        <div></div>
    </div>
    <div style="clear: both;"></div>
</div> <!-- /container -->


</body>
</html>